<% title = _('Listing Permissions') %>
<% content_for :title do %>
  <%=title %>
<% end %>

<h1><%=title %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Category</th>
    <th>Parent</th>
    <th></th>
  </tr>

<% @permissions.each do |permission| %>
  <tr>
    <td><%= permission.name %></td>
    <td><%= permission.code %></td>
    <td><%= permission.category %></td>
    <td><%= permission.parent.name if permission.parent %></td>
    <td><%= link_to 'Destroy', permission, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Permission', new_permission_path %>
