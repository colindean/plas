<% title = "Show transaction" %>
<% content_for :title do %>
  <%=title %>
<% end %>

<h1><%=title %></h1>
<p id="notice"><%= notice %></p>

<p>
  <b>Address:</b>
  <%= @transaction.address.pretty if @transaction.address %>
</p>

<p>
  <b>Email:</b>
  <%= @transaction.email %>
</p>

<p>
  <b>Payer name:</b>
  <%= @transaction.payer_name %>
</p>

<p>
  <b>Payer country:</b>
  <%= @transaction.payer_country %>
</p>

<p>
  <b>Processor userid:</b>
  <%= @transaction.processor_userid %>
</p>

<p>
  <b>Payment:</b>
  <%= @transaction.payment_id %>
</p>

<p>
  <b>Payment Media:</b>
  <%= @transaction.payment_media %>
</p>

<p>
  <b>Recorded by:</b>
  <%= @transaction.recorded_by.display_name %>
</p>

<p>
  <b>Price:</b>
  <%= "%s %s" % [@transaction.price.currency.symbol, @transaction.price] %>
</p>


<p>
  <b>Comments:</b>
  <%= @transaction.comments %>
</p>

<p>
  <b>Registrations:</b>
    <% @transaction.registrations.each do |r| %>
      <%= r.ticket.name %> bought by <%= r.purchaser.display_name %> 
      <%= "(%s)" % r.user.display_name if r.user %>
    <% end %>
</p>

<%= link_to 'Back', transactions_path %>
